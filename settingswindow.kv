<SettingsWindow>:
    name: "settings"
    MDBoxLayout:
        md_bg_color: [224/255, 224/255, 224/255, 1]
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: 1, 1
        spacing: 10
        orientation: 'vertical'
        MDBoxLayout:
            size_hint_y: .2
            pos_hint: {'center_x': .5, 'center_y': .5}
            padding: [10, 10, 10, 0]
            MDRelativeLayout:
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: 1, 1
                MDIconButton:
                    pos_hint: {'center_y': .5}
                    icon: 'arrow-left'
                    halign: 'right'
                    border: [20, 20, 20, 20]
                    text_color: [114/255, 89/255, 89/255, 1]
                    theme_text_color: 'Custom'
                    on_release:
                        root.switch_to_main()
                MDLabel:
                    text: 'Settings'
                    halign: 'center'
                    font_size: '35sp'
                    font_name: 'assets/fonts/Lexend-Bold.ttf'
                    text_color: [114/255, 89/255, 89/255, 1]
                    theme_text_color: 'Custom'
        MDBoxLayout:
            pos_hint: {'center_x': .5, 'center_y': .5}
            padding: [10, 0, 10, 0]
            adaptive_height: True
            MDCard:
                spacing: 10
                radius: [10, 40, 40, 10]
                md_bg_color: [114/255, 89/255, 89/255, 1]
                padding: [10, 0, 10, 0]
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_release:
                    root.config_length()
                MDLabel:
                    text: 'Monitoring Length'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    font_name: 'assets/fonts/Lexend-Medium.ttf'
                MDLabel:
                    text: '30mins'
                    theme_text_color: 'Custom'
                    text_color: 'white'
                    halign: 'right'
                    font_size: '15sp'
                    padding: [0, 0, 20, 0]
                    font_name: 'assets/fonts/Lexend-Regular.ttf'
        MDBoxLayout:
            size_hint_y: .65

            MDCard:
                size_hint_y: 1
                md_bg_color: [224/255, 224/255, 224/255, 1]


<DialogContent>:
    orientation: "vertical"
    size_hint: 0.8, None
    pos_hint_y: 1
    height: "150dp"
    spacing: 10

    MDBoxLayout:
        MDCard:
            md_bg_color: [224/255, 224/255, 224/255, 1]
            padding: dp(10)
            MDTextField:
                text_color_focus: [114/255, 89/255, 89/255, 1]
                pos_hint: {'center_x': .5, 'center_y': .5}
                theme_text_color: 'custom'
                text_color_normal: [114/255, 89/255, 89/255, 1]
                font_size: '30sp'
                multiline: False
                halign: 'center'
                line_color_normal: 'gray'
                line_color_focus: 'gray'
    MDBoxLayout:
        orientation: 'horizontal'
        spacing: 10
        size_hint_x: 1
        MDCard:
            id: seconds_bg
            on_press:
                root.color(seconds_bg, labelseconds)
            MDLabel:
                id: labelseconds
                halign: 'center'
                text: "Seconds"  
                theme_text_color: 'Custom'
                text_color: 'white'
        MDCard:
            id: minutes_bg
            on_press:
                root.color(minutes_bg, labelminutes)
            MDLabel:
                id: labelminutes
                text: "Minutes"  
                theme_text_color: 'Custom'
                text_color: 'white'
                halign: 'center'

        MDCard:
            id: hours_bg
            on_press:
                root.color(hours_bg, labelhours)
            MDLabel:
                id: labelhours
                text: "Hours"  
                halign: 'center'
                theme_text_color: 'Custom'
                text_color: 'white'




    MDBoxLayout:
        orientation: 'horizontal'
        size_hint: 1, .1
        MDLabel:
            valign: 'middle'
            id: date_text
            #pos_hint: {'center_y':0.1}
            font_style: 'Caption'
        MDLabel:
            size_hint: 0.3, 0.1
            id: error_message
            theme_text_color: 'Custom'
            text_color: 'red'
            font_style: 'Subtitle1'
            halign: 'right'