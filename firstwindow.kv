# First Window
<FirstWindow>:
    name: "first"
    category: category
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: .9, .9
        pos_hint: {'center_x': .5, 'center_y': .5}
        spacing: '10dp'
        AndroidCamera:
            id: camera_widget
            fit_mode: 'contain'
            play: True
        MDLabel:
            size_hint_y: .2
            halign: 'center'
            md_bg_color: 'grey'
            id: category
            theme_text_color: 'Custom'
            text_color: 'white'
            text: 'No Face Detected'
            font_name: 'assets/fonts/Lexend-Light.ttf'
        MDFlatButton:
            text: 'Capture'
            pos_hint: {'center_x': .5, 'center_y': .5}
            md_bg_color: 'grey'
            theme_text_color: 'Custom'
            text_color: 'white'
            on_release:
                camera_widget.capture_and_save()
        Image:
            id: captured_image
            source: ''  