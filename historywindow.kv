<HistoryWindow>:
    name: "history"
    MDBoxLayout:
        md_bg_color: [224/255, 224/255, 224/255, 1]
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: 1, 1
        orientation: 'vertical'
        MDBoxLayout:
            size_hint_y: .1
            pos_hint: {'center_x': .5, 'center_y': .5}
            padding: [10, 0, 10, 0]
            MDRelativeLayout:
                pos_hint: {'center_x': .5, 'center_y': .5}
                size_hint: 1, 1
                MDIconButton:
                    pos_hint: {'center_y': .5}
                    icon: 'arrow-left'
                    halign: 'right'
                    border: [20, 20, 20, 20]
                    text_color: [114/255, 89/255, 89/255, 1]
                    theme_text_color: 'Custom'
                    on_release:
                        root.switch_to_main()
                MDLabel:
                    text: 'History'
                    halign: 'center'
                    font_size: '35sp'
                    font_name: 'assets/fonts/Lexend-Bold.ttf'
                    text_color: [114/255, 89/255, 89/255, 1]
                    theme_text_color: 'Custom'
        MDBoxLayout:
            size_hint_y: .9
            ScrollView:
                MDList:
                    id: listexpenses
                    padding: 0

<Chats>:
    size_hint_y: None
    md_bg_color: [224/255, 224/255, 224/255, 1]
    on_release:
        root.switch_screen()
    MDBoxLayout:
        padding: [5, 0, 5, 0]
        MDBoxLayout:
            spacing: 10
            radius: [10, 40, 40, 10]
            md_bg_color: [114/255, 89/255, 89/255, 1]
            padding: dp(10)
            pos_hint: {'center_x': .5, 'center_y': .5}
            adaptive_height: True
            MDIconButton:
                canvas.before:
                    Color:
                        rgba: root.identity_bg
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [dp(10), dp(10)] 
                icon: root.icon
                ripple_scale: 0
                theme_icon_color: 'Custom'
                icon_color: [0, 0, 0, 1]
                pos_hint: {'center_x': .5}
            MDBoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: f'{root.identity}'
                    theme_text_color: 'Custom'
                    text_color: root.id_text_color
                    font_name: 'assets/fonts/Lexend-Medium.ttf'
                MDLabel:
                    text: f'{root.date}'
                    theme_text_color: 'Custom'
                    text_color: root.id_text_color
                    font_size: '10sp'
                    font_name: 'assets/fonts/Lexend-Regular.ttf'
            MDLabel:
                text: '10:08AM'
                theme_text_color: 'Custom'
                text_color: 'white'
                halign: 'right'
                font_size: '15sp'
                padding: [0, 0, 20, 0]
                font_name: 'assets/fonts/Lexend-Regular.ttf'